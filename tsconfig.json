{
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  },
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "downlevelIteration": true,
    "declaration": false,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["es2018", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist/out-tsc",
    "paths": {
      "@cmp/*": ["./src/app/components/*"],
      "@env/*": ["./src/environments/*"],
      "@int/*": ["./src/interfaces/*"],
      "@mod/*": ["./src/app/modules/*"],
      "@pag/*": ["./src/app/pages/*"],
      "@str/*": ["./src/app/store/*"],
      "@tst/*": ["./test_helpers/*"],
      "@utl/*": ["./src/utils/*"],
      "@bab/*": ["dist/@bab/*"]
    },
    "sourceMap": true,
    "target": "es2015",
    "types": ["node", "jest"],
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["node_modules"]
}
