{
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  },
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "downlevelIteration": true,
    "declaration": false,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["es2018", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist/out-tsc",
    "paths": {
      "@cmp/*": ["./src/app/components/*"],
      "@env/*": ["./src/environments/*"],
      "@int/*": ["./src/interfaces/*"],
      "@mod/*": ["./src/app/modules/*"],
      "@pag/*": ["./src/app/pages/*"]
    },
    "sourceMap": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"]
  }
}
