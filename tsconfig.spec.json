{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "outDir": "./out-tsc/spec",
    "types": ["jest", "node"],
    "paths": { "@tst/*": ["./test_helpers/*"], "@mod/*": ["./src/app/modules/*"] }
