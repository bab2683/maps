{
  "name": "maps",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve -o --port 4300",
    "build": "ng build",
    "test": "ng test -u",
    "test:cov": "ng test --coverage --no-cache",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "precommit": "lint-staged && npm run test:cov"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~8.2.0",
    "@angular/common": "~8.2.0",
    "@angular/compiler": "~8.2.0",
    "@angular/core": "~8.2.0",
    "@angular/fire": "^5.2.1",
    "@angular/forms": "~8.2.0",
    "@angular/platform-browser": "~8.2.0",
    "@angular/platform-browser-dynamic": "~8.2.0",
    "@angular/router": "~8.2.0",
    "@ngrx/effects": "^8.2.0",
    "@ngrx/router-store": "^8.2.0",
    "@ngrx/store": "^8.2.0",
    "firebase": "^6.3.5",
    "rxjs": "~6.4.0",
    "tslib": "^1.10.0",
    "zone.js": "~0.9.1"
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "^8.1.0",
    "@angular-builders/dev-server": "^7.3.1",
    "@angular-builders/jest": "^8.2.0",
    "@angular-devkit/build-angular": "^0.802.1",
    "@angular-devkit/build-ng-packagr": "~0.802.1",
    "@angular/cli": "~8.2.1",
    "@angular/compiler-cli": "~8.2.0",
    "@angular/language-service": "~8.2.0",
    "@ngrx/store-devtools": "^8.2.0",
    "@types/jest": "^24.0.18",
    "@types/node": "~8.9.4",
    "codelyzer": "^5.0.0",
    "husky": "^3.0.3",
    "jest": "^24.9.0",
    "jest-preset-angular": "^7.1.1",
    "lint-staged": "^9.2.1",
    "ng-packagr": "^10.1.1",
    "prettier": "^1.18.2",
    "rxjs-tslint-rules": "^4.24.3",
    "stylelint": "^10.1.0",
    "stylelint-order": "^3.0.1",
    "stylelint-selector-bem-pattern": "^2.1.0",
    "ts-jest": "^24.0.2",
    "ts-node": "~7.0.0",
    "tsickle": "^0.36.0",
    "tslint": "~5.15.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "~3.5.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "tslint",
      "prettier --single-quote --write",
      "git add"
    ],
    "*.scss": [
      "stylelint"
    ],
    "*.html": [
      "prettier --write",
      "git add"
    ]
  }
}
